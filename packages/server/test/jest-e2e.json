{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "<rootDir>/dist/nest-environment.js",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["jest-extended", "<rootDir>/test/matchers/index.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "globals": {
    "root": {},
    "admin": {},
    "author": {},
    "client": {}
  }
}
